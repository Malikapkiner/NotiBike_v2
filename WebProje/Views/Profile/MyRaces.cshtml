@model IEnumerable<WebProje.Models.Race>
@{
    ViewBag.Title = "MyRaces";
}

<h2>Etkinliklerim</h2>

@Html.AntiForgeryToken()

<table class="table">
    <tr>
        <th>
            Etkinlikler
        </th>
        <th>
            Başlangıç yer
        </th>
        <th>
            Bitiş yer
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Görüntülenecek Yarış yok</td>
        </tr>
    }
    else
    {


        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.RaceName, "Detail", "Race", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Update", "Race", new { id = item.Id }, null) |
                    @Html.BeginForm("Delete", "Race", new { id = item.Id })
                    {
                    @*@Html.ActionLink("Sil", "Delete", "Race", new { id = item.Id }, null)*@
                    <button type="submit" class="btn btn-danger">Sil</button>
                    }
                </td>

            </tr>
        }
    }
</table>

